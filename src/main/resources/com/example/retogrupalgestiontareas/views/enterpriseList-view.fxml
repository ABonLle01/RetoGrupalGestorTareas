<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>


<BorderPane prefHeight="600.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.retogrupalgestiontareas.controllers.EnterpriseListController">
   <top>
      <FlowPane alignment="CENTER" hgap="499.0">
         <BorderPane.margin>
            <Insets left="50.0" right="50.0" top="20.0" />
         </BorderPane.margin>
         <children>
            <Button fx:id="btnVolver" mnemonicParsing="false" onAction="#back" text="Volver">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="btnDelete" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#delete" prefHeight="36.0" style="-fx-background-color: red; -fx-text-fill: white;" text="Eliminar">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Button>
         </children>
      </FlowPane>
   </top>
   <bottom>
      <Button fx:id="btnAñadir" mnemonicParsing="false" onAction="#newEnterprise" prefHeight="36.0" prefWidth="153.0" text="Nueva Empresa" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="20.0" />
         </BorderPane.margin>
         <font>
            <Font size="16.0" />
         </font>
      </Button>
   </bottom>
   <center>
      <TableView fx:id="tblEmpresas" onMouseClicked="#selectedEnterprise" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="cNombre" prefWidth="75.0" text="Nombre" />
          <TableColumn fx:id="cResponsable" prefWidth="75.0" text="Responsable" />
            <TableColumn fx:id="cTelefono" prefWidth="75.0" text="Teléfono" />
            <TableColumn fx:id="cEmail" prefWidth="75.0" text="Email" />
            <TableColumn fx:id="cAlumno" prefWidth="75.0" text="Alumno" />
        </columns>
         <BorderPane.margin>
            <Insets bottom="25.0" left="50.0" right="50.0" top="25.0" />
         </BorderPane.margin>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
</BorderPane>
